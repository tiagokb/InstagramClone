<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.InstagramClone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/grayDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/NoShadowButtom</item>
    </style>

    <style name="NoShadowButtom" parent="android:Widget.Button">
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>